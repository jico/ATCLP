<?xml version="1.0" encoding="UTF-8"?>

<instructions>

	<instruction>
		<phrase>(climb|descend) and maintain (flight level|mach point) [0-9]*</phrase>
		<type>altitude</type>
		<params>
			<param>
				<type>altitude</type>
				<input>flight level ([0-9]+)</input>
				<output>FL$1</output>
			</param>
			<param>
				<type>speed</type>
				<input>mach point ([0-9]+)</input>
				<output>.$1M</output>
			</param>
		</params>
	</instruction>
	
	<instruction>
		<phrase>(maintain|cruise) (flight level) [0-9]*</phrase>
		<type>altitude</type>
		<params>
			<param>
				<type>altitude</type>
				<input>flight level ([0-9]+)</input>
				<output>FL$1</output>
			</param>
		</params>
	</instruction>
	
	<instruction>
		<phrase>turn (left|right) heading [0-9]* (degrees)?</phrase>
		<type>vector</type>
		<params>
			<param>
				<type>heading</type>
				<input>heading ([0-9]+)</input>
				<output>$1</output>
			</param>
		</params>
	</instruction>
	
	<instruction>
		<phrase>fly heading [0-9]* (degrees)?</phrase>
		<type>vector</type>
		<params>
			<param>
				<type>heading</type>
				<input>heading ([0-9]+)</input>
				<output>$1</output>
			</param>
		</params>
	</instruction>
	
	<instruction>
		<phrase>turn [0-9]* (degrees)? (left|right)</phrase>
		<type>vector</type>
		<params>
			<param>
				<type>heading</type>
				<input>([0-9]*) (degrees)? left</input>
				<output>-$1</output>
			</param>
			<param>
				<type>heading</type>
				<input>([0-9]*) (degrees)? right</input>
				<output>+$1</output>
			</param>
		</params>
	</instruction>
	
	<instruction>
		<phrase>maintain [0-9]* (knots)? (or greater)?</phrase>
		<type>speed</type>
		<params>
			<param>
				<type>speed</type>
				<input>([0-9]+) knots</input>
				<output>$1</output>
			</param>
		</params>
	</instruction>
	
	<instruction>
		<phrase>(increase|reduce) speed to mach point ([0-9]+)</phrase>
		<type>speed</type>
		<params>
			<param>
				<type>speed</type>
				<input>mach point ([0-9]+)</input>
				<output>.$1M</output>
			</param>
		</params>
	</instruction>
	
	<instruction>
		<phrase>(increase|reduce) speed to ([0-9]+)</phrase>
		<type>speed</type>
		<params>
			<param>
				<type>speed</type>
				<input>speed to ([0-9]+)</input>
				<output>$1</output>
			</param>
		</params>
	</instruction>
	
	<instruction>
		<phrase>cleared direct [A-Za-z]+</phrase>
		<type>clearance</type>
		<params>
			<param>
				<type>fix</type>
				<input>direct ([A-Za-z]+)</input>
				<output>$1</output>
			</param>
		</params>
	</instruction>
	

</instructions>

